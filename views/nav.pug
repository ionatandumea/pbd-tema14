nav
  style.
    nav {
      background-color: #333;
      padding: 1em;
    }
    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }
    nav li {
      margin-right: 20px;
    }
    nav a {
      text-decoration: none;
      color: white;
      font-weight: bold;
      padding: 0.5em 1em;
      background-color: #555;
      border-radius: 4px;
      transition: background-color 0.3s;
    }
    nav a:hover {
      background-color: #777;
    }
  ul
    li
      a(href="/") Inventory
    li
      a(href="/supply-depot") Supply Depot
    li
      a(href="/packaged-products") Package Products
    li
      a(href="/plan-transports") Plan Transports

